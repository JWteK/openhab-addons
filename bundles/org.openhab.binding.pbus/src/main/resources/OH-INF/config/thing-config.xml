	<config-description uri="thing-type:pbus:1portDevice">
		<parameter name="address" type="text" required="true" readOnly="true">
			<label>Address</label>
			<description>The pbus address of the device (Detected automatically)</description>
		</parameter>
		<parameter name="refresh" type="integer" unit="s">
			<label>Refresh Interval</label>
			<description>Refresh interval in seconds, 0 = no refresh, 1 = only at startup</description>
			<default>0</default>
			<advanced>true</advanced>
		</parameter>
		<parameter name="Port1" type="text">
			<label>Port1 Name</label>
			<description>The name of Port1</description>
			<default>Port1</default>
			<advanced>true</advanced>
		</parameter>
	</config-description>

